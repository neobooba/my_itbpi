<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shinhan.mymanager.DailyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15">
        <TextView
            android:id="@+id/dailyTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:text="YYYY.MM.DD DAY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"></LinearLayout>
        <TableLayout
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="wrap_content"
            android:gravity="center">
            <View
                android:layout_width="match_parent"
                android:background="#000000"
                android:layout_height="1dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="1dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="프로젝트"
                    android:background="#c1e6aa"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    />
                <Spinner
                    android:id="@+id/pj_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="70"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"/>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="1dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="30"
                    android:layout_marginRight="1dp"
                    android:text="상세내용"
                    android:background="#c1e6aa"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    />
                <EditText
                    android:id="@+id/content"
                    android:layout_width="0dp"
                    android:layout_weight="70"
                    android:layout_height="200dp"
                    android:layout_marginRight="1dp"
                    android:text="오늘의 계획은?"
                    android:background="#ffffff"
                    android:textSize="18sp"
                    android:gravity="top"
                    />
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="right">
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록"
            android:onClick="onInsertClicked"/>
        <Button
            android:id="@+id/button2"
            android:layout_toLeftOf="@id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"/>
    </RelativeLayout>


</LinearLayout>
